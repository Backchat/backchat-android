<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youtell.backdoor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.youtell.backdoor.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.youtell.backdoor.services.APIService" />
        <service android:name="com.youtell.backdoor.services.ORMUpdateService" />

        <activity
            android:name="com.youtell.backdoor.activities.StartupActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.youtell.backdoor.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <activity
            android:name="com.youtell.backdoor.activities.GabListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.youtell.backdoor.activities.GabDetailActivity"
            android:parentActivityName="com.youtell.backdoor.activities.GabListActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.youtell.backdoor.activities.GabListActivity" />
        </activity>
        <activity
            android:name="com.youtell.backdoor.activities.GabAnonymousDetailActivity"
            android:parentActivityName="com.youtell.backdoor.activities.GabListActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.youtell.backdoor.activities.GabListActivity" />
        </activity>
        <activity
            android:name="com.youtell.backdoor.activities.NewGabActivity"
            android:label="New Message"
            android:parentActivityName="com.youtell.backdoor.activities.GabListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.youtell.backdoor.activities.GabListActivity" />
        </activity>
    </application>

</manifest>