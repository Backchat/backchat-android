<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
    <LinearLayout
        android:id="@+id/gab_clues_grid_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green_background_color"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp" >

        <GridLayout
            android:id="@+id/gab_clues_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <Button
            android:id="@+id/gab_clues_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:text="@string/gab_clues_get_more"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/gab_clues_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:text="@string/cancel_button"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp" />
    </LinearLayout>
    
     <TextView
         android:id="@+id/gab_clues_status_label"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/gab_clues_grid_container"
         android:background="#000000"
         android:gravity="center"
         android:paddingBottom="5dp"
         android:paddingTop="5dp"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#FFFFFF" />

</RelativeLayout>